@import 'jeet/framework'
@import 'jeet/goodies'

header
	background-attachment: fixed
	background-image: url(../../img/backgrounds/header.jpg)
	background-position: bottom center
	background-repeat: no-repeat
	background-size: cover
	color: #ffffff
	height: 100%
	min-height: 100%
	min-width: 100%
	position: absolute
	text-align: center
	width: 100%

	h1, h2
		font-family: 'Open Sans', sans-serif
		font-size: 38px
		font-weight: normal
		margin: 20% auto 0 auto
		text-shadow: 1px 2px 2px #000000;

	h2
		font-size: 26px
		margin: 0 auto


div.tab a
	background-color: #00aed7
	color: #ffffff
	font-family: 'Open Sans', sans-serif
	font-size: 10pt
	letter-spacing: 1px
	margin-left: -75px
	padding: 20px 10px
	position: absolute
	bottom: 36px
	left: 50%
	text-align: center
	text-decoration: none
	text-transform: uppercase
	vertical-align: middle
	width: 150px
	z-index: 999

	&:hover
		background-color: #ffffff
		color: #121212

nav
	background-color: #00aed7
	box-shadow: 0 6px 6px -6px #666666
	height: 60px
	width: 100%
	position: fixed
	top: 0
	z-index: 1000
	
	> a
		color: #ffffff
		display: block
		float: left
		font-family: 'Open Sans', sans-serif
		font-size: 8pt
		letter-spacing: 1px
		line-height: 14px
		margin-top: 22px
		margin-left: 25px
		text-decoration: none
		text-transform: uppercase
		vertical-align: middle

		&:hover
			color: #121212

	ul
		display: inline-block
		float: right
		list-style: none
		margin-top: 20px
		margin-right: 10px
		vertical-align: middle

		li
			display: inline-block
			line-height: 14px
			vertical-align: middle

			a
				color: #ffffff
				font-family: 'Open Sans', sans-serif
				font-size: 8pt
				letter-spacing: 1px
				margin: 5px 18px 0 18px
				text-decoration: none
				text-transform: uppercase
				vertical-align: middle

				&:hover
					color: #121212

#wrapper
	position: absolute
	top: 100%
	height: 100%
	max-height: 100%
	width: 100%
	z-index: 999

	section
		height: 100%
		position: relative
		width: 100%
		z-index: 999

		div.container
			center()
			text-align: center
			padding: 80px 20px 0

			*
				position: relative
				z-index: 9999

			h3, h4, h5, h6
				color: #121212
				font-family: 'Open Sans', sans-serif
				font-size: 2em
				font-weight: 300
				margin-top: 0
				margin-bottom: 0

			h3
				border-bottom: 1px solid #dddddd
				padding-bottom: 15px

			h4
				font-size: 1.5em
				margin-top: 15px

			h5
				color: #444444
				font-size: 1.3em
				font-weight: 600
				margin-top: 40px

			h6 
				font-size: 1.1em
				line-height: 35px
				margin-top: 30px

			div.columns
				text-align: left
				div.column
					width: 100%
					col(3,6)

					h5, h6
						font-weight: 400

					h6
						margin-top: 0
						font-size: 1.1em

					p.lead
						color: #666666
						font-family: 'Open Sans', sans-serif
						font-weight: 300

					p, address
						color: #666666
						font-family: 'Open Sans', sans-serif
						font-size: 16px
						font-weight: 300
						line-height: 25px


		ul
			color: #444444
			font-family: 'Open Sans', sans-serif
			font-size: 1.25em
			font-weight: 300
			line-height: 35px
			list-style: none
			padding-left: 2px

			li
				list-style-position: inside

	#services, #thecar,Â #about, #contact
		background-color: #f5f5f5

	#thecar
		h3, h4
			color: #ffffff
			text-shadow: 1px 2px 2px #000000;


form
	margin-top: 20px
	label
		color: #666666
		font-family: 'Open Sans', sans-serif
		font-weight: 300
		text-align: left

	input[type="text"], input[type="password"], textarea
		box-sizing: border-box
		border-radius: 2px
		border: 1px solid #bbbbbb
		font-family: 'Open Sans', sans-serif
		font-weight: 300
		margin-top: 3px
		padding: 5px
		width: 100%

	textarea
		height: 150px
		resize: none

	div.control-group
		margin-bottom: 20px

		&:last-child
			margin-bottom: 0

	div.form-actions
		margin-top: 10px

a
	color: #00aed7
	font-weight: 300
	text-decoration: none

a:hover
	color: darken(#00aed7, 40%)

dl
	font-family: 'Open Sans', sans-serif
	font-weight: 300

dl.horizontal
	margin-top: 0
	dt
		clear: left
		float: left
		text-align: left
		text-overflow: ellipsis
		width: 60px
		white-space: nowrap
		overflow: hidden
	dd
		margin-left: 70px

strong
	font-weight: 400

div.error
	background-color: #f2dede
	border: 1px solid #eed3d7
	border-radius: 2px
	margin-bottom: 10px
	padding: 5px 10px
	ul
		margin: 0
		padding: 0
		li
			color: #b94a48
			font-size: 14px
			line-height: 25px

div.success
	background-color: #dff0d8
	border: 1px solid #d6e9c6
	border-radius: 2px
	color: #468847
	margin-bottom: 10px
	p
		font-size: 14px
		padding: 0 10px


div.gallery
	overflow: hidden
	position: absolute
	top: 0
	left: 0
	width: 100%

	a.control
		background-color: #ffffff
		border-radius: 50%
		font-family: 'Consolas', monospace
		font-size: 3em
		margin-top: -110px
		opacity: 0.5
		padding: 27px 0 28px
		position: absolute
		top: 40%
		vertical-align: middle
		z-index: 9999

		&:hover
			cursor: pointer
			opacity: 1

	a.control.left
		box-shadow: 10px 0px 10px -10px #000000
		padding-right: 20px
		padding-left: 50px
		left: -40px

	a.control.right
		box-shadow: -10px 0px 10px -10px #000000
		padding-right: 50px
		padding-left: 20px
		right: -40px


footer
	background-color: #ffffff
	font-family: 'Open Sans', sans-serif
	font-size: 8pt
	font-weight: 300
	letter-spacing: 1px
	text-transform: uppercase
	position: fixed
	bottom: 0
	left: 0
	padding-right: 10px
	padding-left: 10px
	width: 100%
	z-index: 9999

	p
		float: left
		&:last-child
			float: right

.button
	button()

.button.green
	button(#6eab20)

.button.blue
	button(#00aed7)

.button.purple
	button(#612f64)

.float-right
	float: right

*.fade-in
	animation: fadein 1s

*.fade-in.one
	animation: fadein 1s
*.fade-in.two
	animation: fadein 2s
*.fade-in.three
	animation: fadein 3s
*.fade-in.four
	animation: fadein 4s
*.fade-in.five
	animation: fadein 5s

@keyframes fadein 
	from 
		opacity:0
	to 
		opacity:1

